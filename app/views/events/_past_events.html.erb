<br />
<div id="past_div" class="clear">
  <h2>Past Events</h2>
  <div id="summary" class="clear">
    <p id="event_summary">Summary of Last 10 Events</p>
    <div id="stats" class="left">
      <div class="clear"><%= "Avg:   " + (attendance.inject(:+).to_f / attendance.size).round(1).to_s %></div>
      <div class="clear"><%= "Max:   " + attendance.max.to_s %></div>
      <div class="clear"><%= "Min:   " + attendance.min.to_s %></div>
    </div>
    <div class="inlineblock left"><div class="inlinebar"><%= attendance.join(",") %></div>
      <div class="left">Older</div>
      <div class="right">Newer</div>
    </div>
  </div>

  <div id="past_events" class="clear">
    <table id="event_table">
      <tr>
        <th>Event</th>
        <th>Date</th>
        <th></th>
      </tr>

    <% past_events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td class="tc"><%= event.date.strftime("%a, %b %e, %Y") %></td>
        <td class="tc"><%= link_to 'Show Details', event %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>