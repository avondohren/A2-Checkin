<%= form_for @family do |f| %>
  <% if @family.errors.any? %>
    <% @family.errors.full_messages.each do |error_msg| %>
      <p class="form_error"><%= error_msg %></p>
    <% end %>
  <% end %>
  
  <p class="form_field">
    <%= f.label :familyname %><br />
    <%= f.text_field :familyname %>
  </p>
  
  <p class="form_field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  
  <p class="form_field">
    <%= f.label :state %><br />
    <%= f.select(:family, :state, states, :selected => 'Nebraska') %>
  </p>
  
  <p class="form_field">
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </p>
  
  <p class="form_field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  
  <p class="form_field">
    <%= f.label :alt_phone %><br />
    <%= f.password_field :alt_phone %>
  </p>
  
  <p class="form_field">
    <%= f.label :email %><br />
    <%= f.password_field :email %>
  </p>
  
  <p class="form_field">
    <%= f.label :alt_email %><br />
    <%= f.password_field :alt_email %>
  </p>
  
  <%= f.submit %>
<% end %>