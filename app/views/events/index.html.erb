<h2>Future Events</h2>
<table id="event_table">
  <tr>
    <th>Event</th>
    <th>Date</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

<% @fut_events.each do |event| %>
  <tr>
    <td><%= link_to event.name, event %></td>
    <td class="tc"><%= event.date.strftime("%a, %b %e, %Y") %></td>
    <td class="tc"><%= "Active" if session[:event_id] == event.id %></td>
    <td class="tc"><%= session[:event_id] == event.id ? link_to("Deactivate", deactivate_event_path(event.id)) : link_to("Activate", activate_event_path(event.id)) if @cu.usertype >= User::TYPES['checkin'] %></td>
  </tr>
<% end %>
</table>

<% if @cu.usertype >= User::TYPES['coordinator'] %>
  <br />
  <%= link_to 'New Event', new_event_path, :class => "new_button" %>
<% end %>

<% if @cu.usertype >= User::TYPES['pastor'] %>
  <%= render :partial => "past_events", :locals => {:attendance => @attendance, :past_events => @past_events} %>
<% end %>