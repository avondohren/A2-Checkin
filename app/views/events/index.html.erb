<h1>Event Admin</h1>

<% @events.each do |event| %>
  <p class="event" id="event_<%= event.id %>">
    <%= link_to(event.name, event_path(event.id)) %>
    <% if session[:event_id] == event.id %>
      ( Active Event )
    <% else %>
      ( <%= link_to("Mark As Active Event", activate_event_path(event.id), :class => "grey") %> )
    <% end %>
  </p>
<% end %>
<%= link_to "Add Event", :new_event, :class => "new_button" %>