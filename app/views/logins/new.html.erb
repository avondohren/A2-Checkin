<div id="login">
  <h1>Log In</h1>

  <% if ENV['DEMO_STATUS'] == "TRUE" %>
    <div class="demo tc">
      <p>DEMO SITE: Please use these credentials to sign in and look around:<br />
        Username: admin<br />Password: demo</p>
    </div>
  <% end %>

  <%= form_tag logins_path do %>
    <p>
      <%= label_tag :username %><br />
      <%= text_field_tag :username %>
    </p>
  
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
  
    <%= submit_tag "Log In" %>
  <% end %>
</div>